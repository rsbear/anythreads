{
	"name": "@anythreads/api",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"exports": {
		".": {
			"types": "./src/mod.ts",
			"default": "./src/mod.ts"
		},
		"./accounts": {
			"types": "./src/adapters/adapter-accounts.ts",
			"default": "./src/adapters/adapter-accounts.ts"
		},
		"./replies": {
			"types": "./src/adapters/adapter-replies.ts",
			"default": "./src/adapters/adapter-replies.ts"
		},
		"./threads": {
			"types": "./src/adapters/adapter-threads.ts",
			"default": "./src/adapters/adapter-threads.ts"
		},
		"./votes": {
			"types": "./src/adapters/adapter-votes.ts",
			"default": "./src/adapters/adapter-votes.ts"
		},
		"./cli": {
			"types": "./src/cli/mod.ts",
			"bin": "./src/cli/index.ts",
			"default": "./src/cli/mod.ts"
		},
		"./webrequests": {
			"types": "./src/webrequests/mod.ts",
			"default": "./src/webrequests/mod.ts"
		},
		"./msg": {
			"types": "./src/common/msg.ts",
			"default": "./src/common/msg.ts"
		}
	},
	"bin": {
		"@anythreads/api": "./src/cli/index.ts"
	},
	"files": [
		"src"
	],
	"scripts": {
		"build": "bun build:types",
