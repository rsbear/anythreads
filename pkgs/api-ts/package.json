		"zod": "^3.23.0"
	},
	"peerDependencies": {
		"typescript": "^5",
		"@libsql/kysely-libsql": "^0.3.0",
		"ai": "^4.0.0",
		"kysely-bun-sqlite": "^0.3.2",
		"zod": "^3.23.0"
	},
	"peerDependenciesMeta": {
		"@libsql/kysely-libsql": {
